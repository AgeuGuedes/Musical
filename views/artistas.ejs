<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catálogo de Artistas</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/artistas.css" />
  </head>

  <style>
    body {
      background-color: #2a2a2a;
      font-family: 'Roboto', sans-serif;
      font-size: 18px;
      color: #f5f5f5;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: #333;
    }

    h1 {
      font-size: 28px;
      color: #f1f1f1;
    }

    nav a {
      margin-left: 20px;
      color: #f5f5f5;
      text-decoration: none;
      font-size: 18px;
    }

    nav a:hover {
      color: #ffd700;
    }

    .container {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      gap: 20px;
      padding: 20px;
    }

    .container form {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    input {
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 2px solid #444;
      background-color: #333;
      color: #fff;
    }

    button {
      background-color: #ffd700;
      color: #333;
      border: none;
      padding: 12px 20px;
      font-size: 16px;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #ffcc00;
    }

    .container-geral {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 30px;
      padding: 20px;
    }

    .container-album {
      background-color: #333;
      color: #fff;
      width: 100%;
      max-width: 900px;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .container-album h3 {
      font-size: 24px;
    }

    .container-album p, .container-album h4 {
      font-size: 18px;
    }

    .container-album ul {
      list-style-type: none;
      padding-left: 0;
      font-size: 16px;
    }

    .container-album li {
      margin-bottom: 5px;
    }

    hr {
      border: 0;
      border-top: 1px solid #444;
      margin: 20px 0;
    }
  </style>

  <body>
    <header>
      <h1>Catálogo de Artistas</h1>
      <nav>
        <a href="/">Álbuns</a>
        <a href="/artistas">Artistas</a>
      </nav>
    </header>

    <div class="container">
      <form action="/artistas/search" method="get">
        <input type="text" name="query" placeholder="Procurar artista..." required />
        <button type="submit">Buscar</button>
      </form>
      <button id="novo-artista" onclick="location.href='/artistas/novo'">
        Adicionar Novo Artista
      </button>
    </div>

    <main>
      <h2>ARTISTAS DISPONÍVEIS</h2>
      <div class="container-geral">
        <% artists.forEach(artista => { %>
        <div class="container-album">
          <h3><%= artista.nome %></h3>
          <p>
            <strong>Gêneros:</strong> <%= artista.Generos.map(genero => genero.nome).join(', ') %>
          </p>
          <h4>Discos Associados:</h4>
          <ul>
            <% if (artista.Albums && artista.Albums.length > 0) { %>
            <% artista.Albums.forEach(album => { %>
            <li><%= album.titulo %> (Lançado em <%= album.anoLancamento %>)</li>
            <% }) %>
            <% } else { %>
            <li>Nenhum disco associado</li>
            <% } %>
          </ul>
          <div>
            <button onclick="location.href='/artistas/<%= artista.id %>/editar'">
              Editar
            </button>
            <form action="/artistas/<%= artista.id %>?_method=DELETE" method="POST" class="delete-artist-form">
              <button type="submit">Remover</button>
            </form>
          </div>
          <hr />
        </div>
        <% }) %>
      </div>
    </main>
  </body>

  <script>
    const deleteForms = document.querySelectorAll(".delete-artist-form");

    deleteForms.forEach((form) => {
      form.addEventListener("submit", function (event) {
        const confirmDelete = confirm("Tem certeza de que deseja remover este artista?");

        if (!confirmDelete) {
          event.preventDefault();
        }
      });
    });
  </script>
</html>
