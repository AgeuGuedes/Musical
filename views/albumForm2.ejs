<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catálogo de Discos Musicais</title>
    <link rel="stylesheet" href="/albumForm.css" />
  </head>
  <body>
    <style>
      body {
        background-color: #121212; /* Cor de fundo mais suave */
        color: #f0f0f0; /* Texto em um tom suave de cinza */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
      }

      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 20px;
        background-color: #1f1f1f; /* Cor de fundo do cabeçalho */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      h1 {
        font-size: 28px;
        margin: 0;
      }

      nav a {
        color: #f0f0f0;
        text-decoration: none;
        font-size: 18px;
        margin-left: 20px;
      }

      nav a:hover {
        color: #f39c12; /* Cor de destaque para links */
        text-decoration: underline;
      }

      main {
        background-color: #2d2d2d;
        padding: 40px;
        border-radius: 12px;
        margin: 30px auto;
        width: 90%;
        max-width: 800px; /* Limita a largura do main */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      }

      h2 {
        font-size: 26px;
        color: #f39c12;
        text-align: center;
      }

      form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 15px;
      }

      label {
        font-size: 18px;
        font-weight: bold;
      }

      input, select, textarea {
        padding: 12px;
        font-size: 16px;
        border: 2px solid #444;
        border-radius: 8px;
        background-color: #333;
        color: white;
        width: 100%;
      }

      input[type="file"] {
        padding: 5px;
        border: none;
      }

      textarea {
        height: 120px;
        resize: vertical;
      }

      select {
        height: 150px;
      }

      button {
        background-color: #f39c12;
        padding: 15px 30px;
        font-size: 18px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #d87d05; /* Cor de destaque no hover */
      }

      button:active {
        background-color: #c75b00; /* Cor quando o botão é pressionado */
      }

      option {
        font-size: 16px;
      }

      /* Responsividade para dispositivos móveis */
      @media (max-width: 768px) {
        main {
          padding: 20px;
        }

        h2 {
          font-size: 22px;
        }

        form {
          gap: 10px;
        }

        input, select, textarea {
          font-size: 14px;
        }

        button {
          font-size: 16px;
        }
      }
    </style>

    <header>
      <h1>Catálogo Musical</h1>
      <nav>
        <a href="/albuns">Discos</a>
        <a href="/artistas">Artistas</a>
      </nav>
    </header>

    <main>
      <h2>Novo Disco</h2>
      <form action="/albuns" method="POST" enctype="multipart/form-data">
        <label for="titulo">Título:</label>
        <input type="text" name="titulo" id="titulo" required />

        <label for="anoLancamento">Ano de Lançamento:</label>
        <input type="number" name="anoLancamento" id="anoLancamento" required />

        <label for="capa">Capa:</label>
        <input type="file" name="capa" id="capa" required />

        <label for="artistas">Artistas:</label>
        <select name="artistas[]" id="artistas" multiple>
          <% artists.forEach(artista => { %>
          <option value="<%= artista.id %>"><%= artista.nome %></option>
          <% }) %>
        </select>

        <label for="generos">Gêneros:</label>
        <select name="generos[]" id="generos" multiple>
          <% geners.forEach(genero => { %>
          <option value="<%= genero.id %>"><%= genero.nome %></option>
          <% }) %>
        </select>

        <label for="faixas">Faixas (Título, Duração):</label>
        <textarea name="faixas" id="faixas" required></textarea>

        <button type="submit">Cadastrar</button>
      </form>
    </main>
  </body>
</html>
