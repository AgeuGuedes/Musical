<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catálogo de Álbuns Musicais</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/albuns.css" />
  </head>

  <style>
    body {
      background-color: #212121;
      font-family: 'Roboto', sans-serif;
      font-size: 18px;
      color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px;
      background-color: #2c2c2c;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
      font-size: 28px;
      margin: 0;
    }

    nav a {
      color: #f4f4f4;
      text-decoration: none;
      margin-left: 20px;
      font-size: 18px;
    }

    nav a:hover {
      color: #f39c12;
      text-decoration: underline;
    }

    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: #333;
    }

    input {
      padding: 10px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      width: 300px;
    }

    button {
      background-color: #f39c12;
      border: none;
      padding: 12px 20px;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #e67e22;
    }

    .container-albuns {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    .container-album {
      background-color: #1f1f1f;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      color: #f4f4f4;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    img {
      width: 100%;
      height: auto;
      border-radius: 10px;
    }

    h3 {
      font-size: 20px;
      color: #f39c12;
    }

    p {
      font-size: 16px;
      margin: 5px 0;
    }

    ul {
      list-style-type: none;
      padding: 0;
      font-size: 14px;
    }

    button {
      margin-top: 10px;
      background-color: #f39c12;
      border-radius: 5px;
      width: 100%;
    }

    button:hover {
      background-color: #e67e22;
    }

    /* Responsividade */
    @media (max-width: 768px) {
      header {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .container {
        flex-direction: column;
        gap: 20px;
        align-items: center;
      }

      .container-albuns {
        flex-direction: column;
        align-items: center;
      }

      .container-album {
        width: 90%;
      }
    }
  </style>

  <body>
    <header>
      <h1>Catálogo Musical</h1>
      <nav>
        <a href="/">Álbuns</a>
        <a href="/artistas">Artistas</a>
      </nav>
    </header>

    <div class="container">
      <form action="/albuns/search" method="get">
        <input type="text" name="query" placeholder="Buscar álbum..." required />
        <button type="submit">Buscar</button>
      </form>
      <button id="novo-album" onclick="location.href='/albuns/novo'">
        Adicionar Novo Ábum
      </button>
    </div>

    <main>
      <h2>ÁLBUNS DISPONÍVEIS</h2>

      <div id="container-geral">
        <div class="container-albuns">
          <% albums.forEach(album => { %>
          <div class="container-album">
            <img
              id="img-Capa"
              src="/uploads/<%= album.capa %>"
              alt="Capa do Ábum <%= album.titulo %>"
            />
            <h3><%= album.titulo %></h3>
            <p>Ano: <%= album.anoLancamento %></p>

            <p>
              Artistas: <% if (album.Artista && album.Artista.length > 0) { %>
              <%= album.Artista.map(artista => artista.nome).join(', ') %> <% }
              else { %> Nenhum artista associado <% } %>
            </p>

            <p>
              Gêneros: <% if (album.Generos && album.Generos.length > 0) { %>
              <%= album.Generos.map(genero => genero.nome).join(', ') %> <% }
              else { %> Nenhum gênero associado <% } %>
            </p>

            <h4>Faixas:</h4>
            <ul>
              <% if (album.Faixas && album.Faixas.length > 0) { %>
              <% album.Faixas.forEach(faixa => { %>
              <li><%= faixa.titulo %> <%= faixa.duracao %></li>
              <% }) %>
              <% } else { %> Nenhuma faixa associada <% } %>
            </ul>

            <button onclick="location.href='/albuns/<%= album.id %>/editar'">
              Editar
            </button>
            <form
              action="/albuns/<%= album.id %>?_method=DELETE"
              method="POST"
              class="delete-album-form"
            >
              <button type="submit">Remover</button>
            </form>
          </div>
          <% }) %>
        </div>
      </div>
    </main>

    <script>
      const deleteForms = document.querySelectorAll(".delete-album-form");

      deleteForms.forEach((form) => {
        form.addEventListener("submit", function (event) {
          const confirmDelete = confirm(
            "Tem certeza de que deseja remover este álbum?"
          );

          if (!confirmDelete) {
            event.preventDefault();
          }
        });
      });
    </script>
  </body>
</html>
